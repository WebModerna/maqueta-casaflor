/* Las estructuras */
body
	background #e2d2ec
	/*background unquote("url(data:image/svg+xml;base64,)")*/
	background linear-gradient(to bottom, #e2d2ec 0%,#e2d2ec 24%,#816699 53%,#e1d3ec 85%,#e1d3ec 85%,#e1d3ec 99%)
	filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#e2d2ec', endColorstr='#e1d3ec',GradientType=0 )")
	font-size 18px
	font-family "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif
	text-align center

article
	background blanco_normal


header
	padding 0
	margin 0

	h1
		font-size 1.5em !important

	nav
		#header_nav
			margin 0.5em 0 0 0
			padding 0
			height 0
			opacity 0
			transition(all 0.3s ease-in-out)
			visibility hidden

			li
				a
					background marron_oscuro
					border-radius(4px)
					box-shadow_lindo()
					color gris_lindo
					display block
					padding 0.5em 1em
					font-size 24px
					text-shadow_lindo()
					transition(all 0.3s ease-in-out)

				a:hover, a:focus
					background naranja_oscuro
					color negro

			.current-menu-item
			.current_page_item
				a
					background #000
					color dorado

					&:hover, &:focus
						background #000
						color rgba(dorado, 0.5)
						cursor initial

			ul
				padding 0 auto
				margin 0 auto

	#boton_menu
		display inline-block
		position absolute
		right 0.3em
		top 0.3em

		#menu
			box-shadow_lindo()
			padding 0.25em 0.5em 0.3em 0.5em
			font-size 1.5em
			text-shadow_lindo()
			opacity 0.8

			&:focus
				opacity 0.9

			&:hover
				opacity 1

			&:active
				background negro_re_transparente
				

	
	#logo
		display inline-block
		margin-top 0.3em
		width auto
		
		div
			div
				display none

			figure
				display inline-block
				width 40px

				img
					width 100%

			#nombre_logo
				color blanco_lila_logo
				display inline-block
				font-size 1.3em
				text-shadow(-4px -4px 0px negro)
				
								
				i
					margin-left 0.3em
					font-size 16px
					color naranja_claro

				/* Lo comento lo habilitar√© en modalidad desktop
				span
					color negro
					text-shadow 2px 2px 0px blanco_lila_logo, -2px 2px 0px blanco_lila_logo, 2px -2px 0px blanco_lila_logo, -2px -2px 0px blanco_lila_logo
					-o-text-shadow 2px 2px 0px blanco_lila_logo, -2px 2px 0px blanco_lila_logo, 2px -2px 0px blanco_lila_logo, -2px -2px 0px blanco_lila_logo
					-ms-text-shadow 2px 2px 0px blanco_lila_logo, -2px 2px 0px blanco_lila_logo, 2px -2px 0px blanco_lila_logo, -2px -2px 0px blanco_lila_logo
					-moz-text-shadow 2px 2px 0px blanco_lila_logo, -2px 2px 0px blanco_lila_logo, 2px -2px 0px blanco_lila_logo, -2px -2px 0px blanco_lila_logo
					-webkit-text-shadow 2px 2px 0px blanco_lila_logo, -2px 2px 0px blanco_lila_logo, 2px -2px 0px blanco_lila_logo, -2px -2px 0px blanco_lila_logo*/
				
	#mensaje_top_site
		display none

	#slideshow
		margin 0
		padding 0
		position relative
		text-align right

		
		#barra_control
			bottom -0.9em
			display inline-block
			height 40px
			margin 0
			padding 0
			overflow hidden
			position relative
					
			a
				background blanco_transparente
				color blanco
				display inline
				font-size 70px
				margin 0
				padding 0
				position relative
				opacity 0.6
				padding 0 0.15em
				text-shadow_lindo()
				top -35px

				&:focus
					opacity 0.8
				
				&:hover
					opacity 1

				&:active
					background gris_lila_middle


		#slides
			display block
			margin 0 auto
			
			img
				display block
				width 100%





#ir_arriba
	background marron_oscuro
	bottom 0.3em
	border-radius(4px)
	box-shadow_lindo()
	color blanco
	display inline-block
	font-family monotype
	font-size 40px
	left 0.3em
	opacity 0
	height 45px
	padding 0 0.3em
	position fixed
	transition (all 0.3s ease)
	visibility hidden
	z-index 31

#ir_arriba:focus
	opacity 0.75 !important

#ir_arriba:hover
	opacity 1 !important

#second_bar
	display none

#top_bg
	background #3c0838
	/*background unquote("url(data:image/svg+xml;base64,)")*/
	background linear-gradient(to bottom, #3c0838 0%,#6b167e 100%)
	filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#3c0838', endColorstr='#6b167e',GradientType=0 )")
	height 100%
	position absolute
	top 0
	width 100%
	z-index -1

#wrapper
	/*background unquote("url(data:image/svg+xml;base64,)")*/
	background linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(113,113,108,1) 52%,rgba(218,218,208,1) 100%)
	filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#00000000', endColorstr='#dadad0',GradientType=0 )")



/* Las clases en general */
.content
	background-color #EBEAE8
	height auto
	width 100%

.mini_galeria
	img
		width 100%

.note
	background-color #fff
	border-radius (5px)
	box-shadow (0 1px 1px 0 rgba(0, 0, 0, 0.2))
	color #333
